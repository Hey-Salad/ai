{
  "name": "@heysalad/web",
  "version": "0.1.0",
  "private": true,
  "description": "HeySalad AI Dashboard - ai.heysalad.app",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run build:worker",
    "build:worker": "vite build --ssr",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:dev": "npm run build && wrangler pages deploy --branch=dev",
    "deploy:staging": "npm run build && wrangler pages deploy --branch=staging",
    "deploy:prod": "npm run build && wrangler pages deploy --branch=production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint app --ext .ts,.tsx",
    "lint:fix": "eslint app --ext .ts,.tsx --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@heysalad/ai": "^0.1.0",
    "@remix-run/cloudflare": "^2.17.4",
    "@remix-run/cloudflare-pages": "^2.17.4",
    "@remix-run/react": "^2.17.4",
    "@remix-run/server-runtime": "^2.17.4",
    "isbot": "^5.1.22",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250117.0",
    "@remix-run/dev": "^2.17.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.2.0",
    "vitest": "^2.1.8",
    "wrangler": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
